    <form id="savingedit" class="list-block">
        <input name="SavingID" type="hidden" value="{{model.SavingID}}">
        <input name="SavingTargetID" type="hidden" value="{{model.TargetID}}">
        <ul>
            
            <li>
                <div class="item-content">
                    <div class="item-media"><i class="icon ion-ios-calendar-outline color-form-icon"></i></div>
                    <div class="item-inner">
                        <div class="item-title label">Date</div>
                        <div class="item-input">
                            <input name="SavingDate" type="date" placeholder="Saving Date" value="{{model.SavingDate}}">
                        </div>
                    </div>
                </div>
            </li>
            <li>
                <div class="item-content">
                    <div class="item-media"><i class="icon ion-social-usd color-form-icon"></i></div>
                    <div class="item-inner">
                        <div class="item-title label">Amount</div>
                        <div class="item-input">
                            <input id="SavingAmount" name="SavingAmount" type="number" placeholder="Amount of saving" value="{{model.Amount}}">
                        </div>
                    </div>
                </div>
            </li>
            <li>
                <!-- Additional "smart-select" class -->
                <a href="#" class="item-link smart-select" data-back-on-select="true">
                    <!-- select -->
                    <select name="SavingAccountID" class="saving-account-list">
                        {{#each model.AccountGroups}}
                        {{#unless UserName}}
                        {{#each Accounts}}
                        <option value="{{AccountID}}">{{Name}}</option>
                        {{/each}}
                        {{else}}
                        <optgroup label="{{UserName}}">
                            {{#each Accounts}}
                            <option value="{{AccountID}}">{{Name}}</option>
                            {{/each}}
                        </optgroup>
                        {{/unless}}
                        {{/each}}
                    </select>
                    <div class="item-content">
                        <div class="item-media"><i class="icon ion-ios-briefcase color-form-icon"></i></div>
                        <div class="item-inner">
                            <!-- Select label -->
                            <div class="item-title">Account</div>
                            <!-- Selected value, not required -->
                            <div class="item-after">{{model.AccountText}} </div>
                        </div>
                    </div>
                </a>
            </li>
            <li>
                <div class="item-content">
                    <div class="item-media"><i class="icon ion-ios-list-outline color-form-icon"></i></div>
                    <div class="item-inner">
                        <div class="item-title label">Description</div>
                        <div class="item-input">
                            <input name="SavingDescription" class="item-input" type="text" placeholder="Description" value="{{model.Description}}" />
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </form>
   
