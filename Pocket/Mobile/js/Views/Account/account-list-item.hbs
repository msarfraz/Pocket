{{#.}}
{{#if UserName}}
<li class="list-group-title">{{UserName}}</li>
{{/if}}

{{#each Accounts}}

{{#if Editable}}
<li class="swipeout account-swipeout-{{AccountID}}" id="{{AccountID}}">
    <a href="Pages/ReportList.html?name=accountstatement&accountid={{AccountID}}&currmonth=true" class="item-link item-content swipeout-content" data-account-id="{{AccountID}}">
        <div class="item-media "><span class="badge bg-blue"> <i class="icon ion-ios-briefcase-outline color-white"></i></span></div>
        <div class="item-inner">
            <div class="item-title-row">
                <div class="item-title">{{Name}}</div>
                <div class="item-after">{{CurrentAmount}}</div>
            </div>

        </div>
    </a>
    <div class="swipeout-actions-right">
        <a href="#" class="account-delete-link bg-red" data-id="{{AccountID}}">Delete</a>
        {{#js_compare "!Template7.global.IsLocal"}}
        <a href="Pages/ResourceFriendList.html?ResourceType=2&ResourceID={{AccountID}}" class="account-share-link bg-green" data-id="{{AccountID}}">Share</a>
        {{else}}
        <a href="#" class="bg-green" data-id="{{AccountID}}">Share &nbsp; <span class="badge bg-gray">Pro</span></a>
        {{/js_compare}}
        
    </div>
    <div class="swipeout-actions-left">
        <a href="Pages/Account.html?id={{AccountID}}" class="account-statement-link bg-blue" data-id="{{AccountID}}">Edit</a>
    </div>
</li>
{{else}}
<li id="{{AccountID}}">
    <a href="Pages/ReportList.html?name=accountstatement&accountid={{AccountID}}&currmonth=true" class="item-link item-content" data-account-id="{{AccountID}}">
        <div class="item-media "><span class="badge bg-blue"> <i class="icon ion-ios-briefcase-outline color-white"></i></span></div>
        <div class="item-inner">
            <div class="item-title-row">
                <div class="item-title">{{Name}}</div>
                <div class="item-after">{{CurrentAmount}}</div>
            </div>

        </div>
    </a>

</li>
{{/if}}
	
{{/each}}
{{/.}}