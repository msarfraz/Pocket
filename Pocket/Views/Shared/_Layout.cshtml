<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Pocket Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.7.2.js"></script>

   <link href="@Url.Content("~/Content/themes/redmond/jquery.ui.core.css")" 
        rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/redmond/jquery.ui.datepicker.css")" 
        rel="stylesheet"  type="text/css" />
    <link href="@Url.Content("~/Content/themes/redmond/jquery.ui.theme.css")" 
        rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/redmond/jquery.ui.button.css" rel="stylesheet" />
    @* <link href="~/Content/themes/start/jquery-ui-1.10.3.custom.css" rel="stylesheet" />*@

    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.4.js"></script>
    
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top full-width affix">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("My Pocket", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"> 
                    <li>@Html.ActionLink("Payees", "List", "Payee")</li>
                    <li>@Html.ActionLink("Categories", "List", "Category")</li>
                    <li>@Html.ActionLink("Accounts", "List", "QAccount")</li>
                    <li>@Html.ActionLink("Income Sources", "List", "IncomeSource")</li>
                    <li>@Html.ActionLink("Income", "List", "Income")</li>
                    <li>@Html.ActionLink("Expenses", "List", "Expense")</li>
                    <li>@Html.ActionLink("Events", "List", "Event")</li>
                    <li>@Html.ActionLink("Friends", "List", "Friend")</li>
                    <li>@Html.ActionLink("Targets", "List", "Target")</li>
                    <li>@Html.ActionLink("Vendors", "List", "Vendor")</li>
                    <li>@Html.ActionLink("Summary", "Index", "Report")</li>
                    @*<li>@Html.ActionLink("Notifications", "List", "Notification")</li>*@
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Pocket Application</p>
        </footer>
    </div>

    <script src="~/Scripts/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
</body>
</html>