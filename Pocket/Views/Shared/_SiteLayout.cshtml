<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/images/logo.png" />
    <link rel="shortcut icon" href="~/images/logo.png" />

    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    @*<link href="~/Content/signin.css" rel="stylesheet" />*@

    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    @*<script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>*@

        
    <link href="~/Content/carousel.css" rel="stylesheet" type="text/css" />
    <style type="text/less">
        .item
        {
            background:#333;
            text-align:center;
            height:300px;
        }
    </style>
    <script src="~/Scripts/QIE/Common.js"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><img src="~/images/logo.png" /> @Pocket.Common.Global.ApplicationName</a>
            </div>
            <div class="navbar-collapse collapse">
                <form class="navbar-form navbar-right" role="form">
                     
                    <a href="/Account/Login" class="btn btn-default">Sign in</a>
                    <a href="/Account/Register" class="btn btn-primary">Register</a>
                    <a href="#" onclick="ShowCustomerRequest()" role="button" class="btn btn-info">Contact Us</a>
                </form>
            </div><!--/.navbar-collapse -->
        </div>
    </div>


        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @Pocket.Common.Global.ApplicationName</p>
        </footer>


    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @*<script src="~/Scripts/docs.min.js"></script>

    @Scripts.Render("~/bundles/jquery")

    *@
    @RenderSection("scripts", required: false)

    @Html.AntiForgeryToken()
    <div id="CRequestBody">

    </div>
    <script type="text/javascript">
        function ShowCustomerRequest() {
            $("#CRequestBody").load("/Home/CustRequest", function (response, status, xhr) {
                    $("#crequest").modal('show');
            });

        }
    </script>
</body>
</html>