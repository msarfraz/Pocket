@model IEnumerable<Pocket.Models.Event>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create") | @Html.ActionLink("Quick View", "List")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SharedFriends)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
         <td>
             <ul>
                 @foreach (var fr in item.SharedFriends)
                 {

                     <li>
                         @fr.User.FirstName @fr.User.LastName
                     </li>
                 }
             </ul>   </td>
        <td>
            @Html.ActionLink("Share", "Share", new { id = item.EventID }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.EventID }) |
            @Html.ActionLink("Details", "Details", new { id=item.EventID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EventID })
        </td>
    </tr>
}

</table>
