@model IEnumerable<Pocket.Models.Vendor>

@{
    ViewBag.Title = "Vendors";
}

<link href="~/Content/ui.jqgrid.css" rel="stylesheet" />
<script src="~/Scripts/grid.locale-en.js"></script>
<script src="~/Scripts/jquery.jqGrid.min.js"></script>
<script src="~/Scripts/QIE/JqGrid.js"></script>

<br />

<table id="lstVendor"></table>
<div id="pgrVendor"></div>
<div>
    @Html.AntiForgeryToken()
</div>
<script type="text/javascript">
    var colNames = ['VendorID', 'Name'];
    var colModel = [
        { name: 'VendorID', index: 'VendorID', width: 55, key: true, hidden: true },
        { name: 'Name', index: 'Name', width: 100, editable: true, editrules: { required: true } }

    ];
    createJQGrid('/vendor/jlist', colNames, colModel, 'VendorID', "/vendor/jedit", "Vendor List", "#lstVendor", '#pgrVendor', null, { sidx: 'Name', sord: 'asc', delgrid: true, delurl: '/vendor/jdelete' });
    </script>
