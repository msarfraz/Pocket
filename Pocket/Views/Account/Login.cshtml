@model Pocket.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/social-buttons.css" rel="stylesheet" />

<h2>Sign in to @Pocket.Common.Global.ApplicationName</h2>
<style>
    .input-group-addon {
        min-width: 100px;
        text-align: right;
    }
</style>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Use a local account to sign in.</h4>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <span class="glyphicon glyphicon-user"></span> Login: </span>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User Login" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span> Password: </span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required", placehoder="password here" })
                        @Html.ValidationMessageFor(m => m.Password)

                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(m => m.RememberMe) Remember me
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Sign in" class="btn btn-primary btn-large" />
                    <a href="/Home/" class="btn btn-default">Cancel</a>
                     <div class="input-group">
                        
                    </div>
                </div>
            }
        </section>
    </div>
    <div class="col-md-4">
        <section id="socialLoginForm">
            @Html.Partial("_ExternalLoginsListPartial", new { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>
</div>
